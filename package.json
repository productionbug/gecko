{
  "name": "@hexpacket",
  "private": false,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:playground": "turbo run dev --filter=@hexpacket/ui --filter=@hexpacket/playground",
    "dev:docs": "turbo run dev --filter=@hexpacket/ui --filter=@hexpacket/docs",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.6.0",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
